            </div>

            <!-- Form Container -->
            <div class="form-container">
                <form id="pdfForm" onsubmit="submitForm(event)">
                    <!-- Basic Information -->
                    <div class="form-section">
                        <h3 class="section-title">المعلومات الأساسية</h3>
                        
                        <div class="form-group">
                            <label class="form-label" for="pdfName">اسم الملف *</label>
                            <input type="text" id="pdfName" name="pdfName" class="form-control" required>
                            <div class="help-text">أدخل اسم واضح ومفهوم للملف</div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="pdfGrade">الصف الدراسي *</label>
                            <select id="pdfGrade" name="pdfGrade" class="form-select" required>
                                <option value="">اختر الصف الدراسي</option>
                                <option value="Grade1">الصف الأول الثانوي</option>
                                <option value="Grade2">الصف الثاني الثانوي</option>
                                <option value="Grade3">الصف الثالث الثانوي</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="chapterId">الفصل التعليمي (اختياري)</label>
                            <select id="chapterId" name="chapterId" class="form-select">
                                <option value="">اختر الفصل التعليمي</option>
                                <% if (chapters && chapters.length > 0) { %>
                                    <% chapters.forEach(chapter => { %>
                                        <option value="<%= chapter._id %>"><%= chapter.chapterName %> - <%= chapter.chapterGrade %></option>
                                    <% }); %>
                                <% } %>
                            </select>
