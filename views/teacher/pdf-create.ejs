    <script>
        // Mobile sidebar toggle
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('open');
        }

        // Handle source type change
        document.querySelectorAll('input[name="sourceType"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const googleDriveGroup = document.getElementById('googleDriveGroup');
                const directUrlGroup = document.getElementById('directUrlGroup');
                
                if (this.value === 'googleDrive') {
                    googleDriveGroup.style.display = 'block';
                    directUrlGroup.style.display = 'none';
                } else {
                    googleDriveGroup.style.display = 'none';
                    directUrlGroup.style.display = 'block';
                }
            });
        });

        // Handle PDF status change
        document.getElementById('pdfStatus').addEventListener('change', function() {
            const priceGroup = document.getElementById('priceGroup');
            if (this.value === 'Paid') {
                priceGroup.style.display = 'block';
            } else {
                priceGroup.style.display = 'none';
            }
        });

        // Extract Google Drive file ID
        function extractFileId() {
            const url = document.getElementById('googleDriveUrl').value;
            if (!url) {
                alert('يرجى إدخال رابط Google Drive أولاً');
                return;
            }

            // Extract file ID from various Google Drive URL formats
            const patterns = [
                /\/file\/d\/([a-zA-Z0-9-_]+)\//,
                /[?&]id=([a-zA-Z0-9-_]+)/,
                /\/document\/d\/([a-zA-Z0-9-_]+)\//,
                /\/spreadsheets\/d\/([a-zA-Z0-9-_]+)\//,
                /\/presentation\/d\/([a-zA-Z0-9-_]+)\//
            ];

            let fileId = null;
            for (const pattern of patterns) {
                const match = url.match(pattern);
                if (match && match[1]) {
                    fileId = match[1];
                    break;
                }
            }

            if (fileId) {
                // Create hidden input for file ID
                let hiddenInput = document.getElementById('googleDriveFileId');
                if (!hiddenInput) {
                    hiddenInput = document.createElement('input');
                    hiddenInput.type = 'hidden';
                    hiddenInput.name = 'googleDriveFileId';
                    hiddenInput.id = 'googleDriveFileId';
                    document.getElementById('pdfForm').appendChild(hiddenInput);
                }
                hiddenInput.value = fileId;
                
                alert('تم استخراج معرف الملف بنجاح: ' + fileId);
            } else {
                alert('لم يتم العثور على معرف صالح في الرابط. تأكد من أن الرابط صحيح.');
            }
        }

        // Submit form
        function submitForm(event) {
            event.preventDefault();
            
            const form = document.getElementById('pdfForm');
            const formData = new FormData(form);
            const loadingSpinner = document.getElementById('loadingSpinner');
            const submitBtn = form.querySelector('button[type="submit"]');
            
            // Show loading
            loadingSpinner.style.display = 'inline-block';
            submitBtn.disabled = true;
            
            // Convert FormData to JSON
            const data = {};
            for (let [key, value] of formData.entries()) {
                data[key] = value;
            }
            
            // Send request
            fetch('/teacher/pdf/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    alert('تم إنشاء الملف بنجاح!');
                    window.location.href = '/teacher/pdfs';
                } else {
                    alert('حدث خطأ: ' + result.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('حدث خطأ أثناء حفظ الملف');
            })
            .finally(() => {
                // Hide loading
                loadingSpinner.style.display = 'none';
                submitBtn.disabled = false;
            });
        }

        // Mobile responsive handling
        function handleResize() {
            if (window.innerWidth <= 1024) {
                document.querySelector('.mobile-menu-toggle').style.display = 'block';
            } else {
                document.querySelector('.mobile-menu-toggle').style.display = 'none';
                document.querySelector('.sidebar').classList.remove('open');
            }
        }

        window.addEventListener('resize', handleResize);
        handleResize();

        // Close sidebar on mobile when clicking outside
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.querySelector('.mobile-menu-toggle');
            
            if (window.innerWidth <= 1024 && 
                !sidebar.contains(event.target) && 
                !toggleBtn.contains(event.target) &&
                sidebar.classList.contains('open')) {
                sidebar.classList.remove('open');
            }
        });
    </script>
</body>
