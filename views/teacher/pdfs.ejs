<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إدارة الملفات PDF - منصة Biodiva</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #667eea;
            --primary-light: #764ba2;
            --secondary-color: #10b981;
            --accent-orange: #f59e0b;
            --accent-purple: #8b5cf6;
            --white: #ffffff;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-900: #111827;
            --error: #ef4444;
            --success: #10b981;
            --warning: #f59e0b;
            --spacing-xs: 0.25rem;
            --spacing-sm: 0.5rem;
            --spacing-md: 1rem;
            --spacing-lg: 1.5rem;
            --spacing-xl: 2rem;
            --radius: 0.5rem;
            --radius-lg: 0.75rem;
            --radius-xl: 1rem;
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: var(--gray-50);
            margin: 0;
            padding: 0;
        }

        .main-container {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background: var(--white);
            box-shadow: var(--shadow-lg);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar-header {
            padding: var(--spacing-xl);
            border-bottom: 1px solid var(--gray-200);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary-color);
            text-decoration: none;
        }

        .sidebar-nav {
            padding: var(--spacing-lg);
        }

        .nav-item {
            margin-bottom: var(--spacing-sm);
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
            padding: var(--spacing-md);
            color: var(--gray-600);
            text-decoration: none;
            border-radius: var(--radius);
            transition: all 0.2s ease;
        }

        .nav-link:hover,
        .nav-link.active {
            background: var(--primary-color);
            color: var(--white);
        }

        .nav-icon {
            font-size: 1.25rem;
        }

        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: var(--spacing-xl);
        }

        .page-header {
            background: var(--white);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow);
            padding: var(--spacing-xl);
            margin-bottom: var(--spacing-xl);
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--gray-900);
            margin: 0;
        }

        .page-subtitle {
            color: var(--gray-600);
            margin-top: var(--spacing-sm);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: var(--spacing-lg);
            margin-bottom: var(--spacing-xl);
        }

        .stat-card {
            background: var(--white);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow);
            padding: var(--spacing-xl);
            text-align: center;
            border: 1px solid var(--gray-200);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            margin: 0 auto var(--spacing-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: var(--white);
        }

        .stat-icon.total { background: var(--primary-color); }
        .stat-icon.paid { background: var(--accent-orange); }
        .stat-icon.free { background: var(--secondary-color); }
        .stat-icon.drive { background: var(--accent-purple); }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: var(--spacing-xs);
        }

        .stat-label {
            color: var(--gray-600);
            font-size: 0.875rem;
        }

        .actions-bar {
            background: var(--white);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow);
            padding: var(--spacing-lg);
            margin-bottom: var(--spacing-xl);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: var(--spacing-md);
        }

        .btn-primary {
            background: var(--primary-color);
            color: var(--white);
            border: none;
            padding: var(--spacing-md) var(--spacing-lg);
            border-radius: var(--radius);
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: var(--spacing-sm);
            transition: all 0.2s ease;
        }

        .btn-primary:hover {
            background: var(--primary-light);
            color: var(--white);
            text-decoration: none;
        }

        .btn-outline {
            background: transparent;
            color: var(--gray-600);
            border: 2px solid var(--gray-200);
            padding: var(--spacing-md) var(--spacing-lg);
            border-radius: var(--radius);
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: var(--spacing-sm);
            transition: all 0.2s ease;
        }

        .btn-outline:hover {
            background: var(--gray-100);
            color: var(--gray-700);
            text-decoration: none;
        }

        .btn-danger {
            background: var(--error);
            color: var(--white);
            border: none;
            padding: var(--spacing-sm) var(--spacing-md);
            border-radius: var(--radius);
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .btn-danger:hover {
            background: #dc2626;
        }

        .btn-success {
            background: var(--success);
            color: var(--white);
            border: none;
            padding: var(--spacing-sm) var(--spacing-md);
            border-radius: var(--radius);
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .btn-success:hover {
            background: #059669;
        }

        .pdfs-table {
            background: var(--white);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        .table {
            margin: 0;
        }

        .table th {
            background: var(--gray-50);
            color: var(--gray-700);
            font-weight: 600;
            border: none;
            padding: var(--spacing-lg);
        }

        .table td {
            border: none;
            padding: var(--spacing-lg);
            vertical-align: middle;
        }

        .table tbody tr {
            border-bottom: 1px solid var(--gray-200);
        }

        .table tbody tr:last-child {
            border-bottom: none;
        }

        .pdf-name {
            font-weight: 600;
            color: var(--gray-900);
        }

        .pdf-grade {
            background: var(--gray-100);
            color: var(--gray-700);
            padding: var(--spacing-xs) var(--spacing-sm);
            border-radius: var(--radius);
            font-size: 0.75rem;
            font-weight: 600;
        }

        .status-badge {
            padding: var(--spacing-xs) var(--spacing-sm);
            border-radius: var(--radius-xl);
            font-size: 0.75rem;
            font-weight: 600;
        }

        .status-badge.free {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }

        .status-badge.paid {
            background: rgba(245, 158, 11, 0.1);
            color: var(--warning);
        }

        .security-badges {
            display: flex;
            gap: var(--spacing-xs);
            flex-wrap: wrap;
        }

        .security-badge {
            padding: var(--spacing-xs) var(--spacing-sm);
            border-radius: var(--radius);
            font-size: 0.625rem;
            font-weight: 600;
            background: var(--gray-100);
            color: var(--gray-600);
        }

        .security-badge.enabled {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }

        .security-badge.disabled {
            background: rgba(239, 68, 68, 0.1);
            color: var(--error);
        }

        .actions-cell {
            display: flex;
            gap: var(--spacing-sm);
            align-items: center;
        }

        .empty-state {
            text-align: center;
            padding: var(--spacing-xl) * 2;
            color: var(--gray-500);
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: var(--spacing-lg);
            opacity: 0.5;
        }

        .empty-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: var(--spacing-sm);
        }

        .empty-description {
            margin-bottom: var(--spacing-lg);
        }

        @media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .sidebar.open {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-toggle {
                display: block !important;
            }
        }

        .mobile-menu-toggle {
            display: none;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1001;
            background: var(--primary-color);
            color: white;
            border: none;
            padding: 12px;
            border-radius: var(--radius);
            box-shadow: var(--shadow-lg);
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="/teacher/dash" class="sidebar-logo">
                    <i class="fas fa-graduation-cap"></i>
                    منصة Biodiva
                </a>
            </div>
            
            <nav class="sidebar-nav">
                <div class="nav-item">
                    <a href="/teacher/dash" class="nav-link">
                        <i class="material-icons-outlined nav-icon">dashboard</i>
                        <span>لوحة التحكم</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/teacher/chapters" class="nav-link">
                        <i class="material-icons-outlined nav-icon">library_books</i>
                        <span>الأبواب التعليمية</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/teacher/quizzes" class="nav-link">
                        <i class="material-icons-outlined nav-icon">quiz</i>
                        <span>الامتحانات</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/teacher/pdfs" class="nav-link active">
                        <i class="material-icons-outlined nav-icon">description</i>
                        <span>الملفات PDF</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/teacher/codes" class="nav-link">
                        <i class="material-icons-outlined nav-icon">vpn_key</i>
                        <span>إدارة الأكواد</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/teacher/students" class="nav-link">
                        <i class="material-icons-outlined nav-icon">people</i>
                        <span>الطلاب</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/teacher/whatsapp" class="nav-link">
                        <i class="material-icons-outlined nav-icon">chat</i>
                        <span>واتساب</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/teacher/logout" class="nav-link">
                        <i class="material-icons-outlined nav-icon">logout</i>
                        <span>تسجيل الخروج</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">إدارة الملفات PDF</h1>
                <p class="page-subtitle">إدارة وتنظيم الملفات التعليمية والمراجع</p>
            </div>

            <!-- Stats Overview -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon total">
                        <i class="material-icons-outlined">folder</i>
                    </div>
                    <div class="stat-value"><%= stats.totalPDFs %></div>
                    <div class="stat-label">إجمالي الملفات</div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon paid">
                        <i class="material-icons-outlined">lock</i>
                    </div>
                    <div class="stat-value"><%= stats.paidPDFs %></div>
                    <div class="stat-label">ملفات مدفوعة</div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon free">
                        <i class="material-icons-outlined">lock_open</i>
                    </div>
                    <div class="stat-value"><%= stats.freePDFs %></div>
                    <div class="stat-label">ملفات مجانية</div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon drive">
                        <i class="material-icons-outlined">cloud</i>
                    </div>
                    <div class="stat-value"><%= stats.googleDrivePDFs %></div>
                    <div class="stat-label">ملفات Google Drive</div>
                </div>
            </div>

            <!-- Actions Bar -->
            <div class="actions-bar">
                <div>
                    <a href="/teacher/pdf/create" class="btn-primary">
                        <i class="material-icons-outlined">add</i>
                        إضافة ملف PDF جديد
                    </a>
                </div>
                
                <div>
                    <button class="btn-outline" onclick="bulkOperations()">
                        <i class="material-icons-outlined">settings</i>
                        عمليات مجمعة
                    </button>
                </div>
            </div>

            <!-- PDFs Table -->
            <div class="pdfs-table">
                <% if (pdfs && pdfs.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>اسم الملف</th>
                            <th>الصف</th>
                            <th>الحالة</th>
                            <th>الأمان</th>
                            <th>المشاهدات</th>
                            <th>تاريخ الإنشاء</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pdfs.forEach(pdf => { %>
                        <tr>
                            <td>
                                <div class="pdf-name"><%= pdf.pdfName %></div>
                                <% if (pdf.googleDriveFileId) { %>
                                <small class="text-muted">
                                    <i class="material-icons-outlined" style="font-size: 0.875rem;">cloud</i>
                                    Google Drive
                                </small>
                                <% } %>
                            </td>
                            <td>
                                <span class="pdf-grade"><%= pdf.pdfGrade %></span>
                            </td>
                            <td>
                                <span class="status-badge <%= pdf.pdfStatus.toLowerCase() %>">
                                    <%= pdf.pdfStatus === 'Free' ? 'مجاني' : 'مدفوع' %>
                                </span>
                            </td>
                            <td>
                                <div class="security-badges">
                                    <span class="security-badge <%= pdf.allowDownload ? 'disabled' : 'enabled' %>">
                                        <i class="material-icons-outlined" style="font-size: 0.75rem;">download</i>
                                        تحميل
                                    </span>
                                    <span class="security-badge <%= pdf.allowPrint ? 'disabled' : 'enabled' %>">
                                        <i class="material-icons-outlined" style="font-size: 0.75rem;">print</i>
                                        طباعة
                                    </span>
                                    <span class="security-badge <%= pdf.allowCopy ? 'disabled' : 'enabled' %>">
                                        <i class="material-icons-outlined" style="font-size: 0.75rem;">content_copy</i>
                                        نسخ
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <strong><%= pdf.totalViews || 0 %></strong>
                                    <small class="text-muted">مشاهدة</small>
                                </div>
                                <div>
                                    <small class="text-muted"><%= pdf.uniqueViewers || 0 %> مستخدم</small>
                                </div>
                            </td>
                            <td>
                                <small class="text-muted">
                                    <%= new Date(pdf.createdAt).toLocaleDateString('ar-EG') %>
                                </small>
                            </td>
                            <td>
                                <div class="actions-cell">
                                    <a href="/teacher/pdf/<%= pdf._id %>/edit" class="btn-outline" style="padding: var(--spacing-sm);">
                                        <i class="material-icons-outlined" style="font-size: 1rem;">edit</i>
                                    </a>
                                    <button class="btn-danger" onclick="deletePDF('<%= pdf._id %>')">
                                        <i class="material-icons-outlined" style="font-size: 1rem;">delete</i>
                                    </button>
                                    <button class="btn-success" onclick="viewAnalytics('<%= pdf._id %>')">
                                        <i class="material-icons-outlined" style="font-size: 1rem;">analytics</i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="material-icons-outlined">folder_open</i>
                    </div>
                    <div class="empty-title">لا توجد ملفات PDF</div>
                    <div class="empty-description">
                        ابدأ بإنشاء ملف PDF جديد لإضافة المحتوى التعليمي للطلاب
                    </div>
                    <a href="/teacher/pdf/create" class="btn-primary">
                        <i class="material-icons-outlined">add</i>
                        إضافة ملف PDF جديد
                    </a>
                </div>
                <% } %>
            </div>
        </main>
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Mobile sidebar toggle
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('open');
        }

        // Delete PDF function
        function deletePDF(pdfId) {
            if (confirm('هل أنت متأكد من حذف هذا الملف؟ هذا الإجراء لا يمكن التراجع عنه.')) {
                fetch(`/teacher/pdf/${pdfId}/delete`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('حدث خطأ أثناء حذف الملف: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('حدث خطأ أثناء حذف الملف');
                });
            }
        }

        // View analytics function
        function viewAnalytics(pdfId) {
            fetch(`/teacher/pdf/${pdfId}/analytics`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Show analytics modal or redirect to analytics page
                        console.log('Analytics data:', data.analytics);
                        alert('تحليلات الملف:\n' + 
                              'إجمالي المشاهدات: ' + data.analytics.pdfInfo.totalViews + '\n' +
                              'عدد المستخدمين: ' + data.analytics.accessStats.totalUsers + '\n' +
                              'متوسط المشاهدات: ' + data.analytics.accessStats.averageViewsPerUser);
                    } else {
                        alert('حدث خطأ أثناء تحميل التحليلات: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('حدث خطأ أثناء تحميل التحليلات');
                });
        }

        // Bulk operations function
        function bulkOperations() {
            alert('ميزة العمليات المجمعة قيد التطوير');
        }

        // Mobile responsive handling
        function handleResize() {
            if (window.innerWidth <= 1024) {
                document.querySelector('.mobile-menu-toggle').style.display = 'block';
            } else {
                document.querySelector('.mobile-menu-toggle').style.display = 'none';
                document.querySelector('.sidebar').classList.remove('open');
            }
        }

        window.addEventListener('resize', handleResize);
        handleResize();

        // Close sidebar on mobile when clicking outside
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.querySelector('.mobile-menu-toggle');
            
            if (window.innerWidth <= 1024 && 
                !sidebar.contains(event.target) && 
                !toggleBtn.contains(event.target) &&
                sidebar.classList.contains('open')) {
                sidebar.classList.remove('open');
            }
        });
    </script>
</body>
</html>
