<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>المواد التعليمية - منصة Biodiva</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

  <!-- Styles -->
  <link rel="stylesheet" href="/css/student-modern.css">

  <style>
    .pdfs-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: var(--spacing-xl);
      margin-top: var(--spacing-xl);
    }

    .pdf-card {
      background: var(--white);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow);
      border: 1px solid var(--gray-200);
      overflow: hidden;
      transition: all 0.3s ease;
      position: relative;
    }

    .pdf-card:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-xl);
    }

    .pdf-image {
      width: 100%;
      height: 200px;
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }

    .pdf-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .pdf-icon {
      font-size: 4rem;
      color: var(--white);
      opacity: 0.8;
    }

    .pdf-type-badge {
      position: absolute;
      top: var(--spacing-md);
      right: var(--spacing-md);
      background: rgba(255, 255, 255, 0.9);
      color: var(--primary-color);
      padding: var(--spacing-xs) var(--spacing-md);
      border-radius: var(--radius-xl);
      font-size: 0.75rem;
      font-weight: 600;
    }

    .pdf-content {
      padding: var(--spacing-xl);
    }

    .pdf-header {
      margin-bottom: var(--spacing-lg);
    }

    .pdf-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--gray-900);
      margin-bottom: var(--spacing-sm);
      line-height: 1.4;
    }

    .pdf-description {
      color: var(--gray-600);
      font-size: 0.875rem;
      line-height: 1.5;
    }

    .pdf-meta {
      display: flex;
      align-items: center;
      gap: var(--spacing-lg);
      margin-bottom: var(--spacing-lg);
      padding: var(--spacing-md);
      background: var(--gray-50);
      border-radius: var(--radius);
    }

    .pdf-meta-item {
      display: flex;
      align-items: center;
      gap: var(--spacing-xs);
      font-size: 0.875rem;
      color: var(--gray-600);
    }

    .pdf-meta-icon {
      font-size: 1rem;
      color: var(--primary-color);
    }

    .pdf-price {
      font-weight: 600;
      color: var(--secondary-color);
    }

    .pdf-status {
      padding: var(--spacing-xs) var(--spacing-md);
      border-radius: var(--radius-xl);
      font-size: 0.75rem;
      font-weight: 600;
    }

    .pdf-status.free {
      background: rgba(16, 185, 129, 0.1);
      color: var(--secondary-color);
    }

    .pdf-status.paid {
      background: rgba(245, 158, 11, 0.1);
      color: var(--accent-orange);
    }

    .pdf-actions {
      display: flex;
      gap: var(--spacing-md);
    }

    .pdf-download-btn {
      width: 100%;
      padding: var(--spacing-md);
      background: var(--primary-color);
      color: var(--white);
      border: 2px solid var(--primary-color);
      border-radius: var(--radius);
      font-size: 0.875rem;
      cursor: pointer;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--spacing-xs);
    }

    .pdf-download-btn:hover {
      background: var(--primary-dark);
      border-color: var(--primary-dark);
    }

    .pdf-download-btn:disabled {
      background: var(--gray-300);
      border-color: var(--gray-300);
      cursor: not-allowed;
    }

    .code-input-section {
      display: none;
      margin-top: var(--spacing-md);
      padding: var(--spacing-md);
      background: var(--gray-50);
      border-radius: var(--radius);
    }

    .code-input {
      width: 100%;
      padding: var(--spacing-md);
      border: 2px solid var(--gray-200);
      border-radius: var(--radius);
      font-size: 1rem;
      text-align: center;
      margin-bottom: var(--spacing-md);
    }

    .code-submit-btn {
      width: 100%;
      padding: var(--spacing-md);
      background: var(--secondary-color);
      color: var(--white);
      border: none;
      border-radius: var(--radius);
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .filters-section {
      background: var(--white);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow);
      padding: var(--spacing-lg);
      margin-bottom: var(--spacing-xl);
    }

    .search-container {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-lg);
    }

    .search-input-wrapper {
      position: relative;
      max-width: 500px;
      margin: 0 auto;
    }

    .search-icon {
      position: absolute;
      right: var(--spacing-md);
      top: 50%;
      transform: translateY(-50%);
      color: var(--gray-500);
      font-size: 1.25rem;
    }

    .search-input {
      width: 100%;
      padding: var(--spacing-md) var(--spacing-xl) var(--spacing-md) var(--spacing-md);
      border: 2px solid var(--gray-200);
      border-radius: var(--radius-xl);
      font-size: 1rem;
      background: var(--gray-50);
      transition: all 0.3s ease;
    }

    .search-input:focus {
      outline: none;
      border-color: var(--primary-color);
      background: var(--white);
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .filter-buttons {
      display: flex;
      gap: var(--spacing-sm);
      justify-content: center;
      flex-wrap: wrap;
    }

    .filter-btn {
      display: flex;
      align-items: center;
      gap: var(--spacing-xs);
      padding: var(--spacing-sm) var(--spacing-lg);
      border: 2px solid var(--gray-200);
      border-radius: var(--radius-xl);
      background: var(--white);
      color: var(--gray-700);
      font-size: 0.875rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .filter-btn:hover {
      border-color: var(--primary-color);
      color: var(--primary-color);
      transform: translateY(-2px);
      box-shadow: var(--shadow);
    }

    .filter-btn.active {
      background: var(--primary-color);
      border-color: var(--primary-color);
      color: var(--white);
      box-shadow: var(--shadow);
    }

    .filter-btn i {
      font-size: 1rem;
    }

    .stats-overview {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--spacing-lg);
      margin-bottom: var(--spacing-xl);
    }

    .stat-item {
      background: var(--white);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow);
      padding: var(--spacing-lg);
      text-align: center;
      border: 1px solid var(--gray-200);
    }

    .stat-icon {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      margin: 0 auto var(--spacing-md);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      color: var(--white);
    }

    .stat-icon.total {
      background: var(--primary-color);
    }

    .stat-icon.free {
      background: var(--secondary-color);
    }

    .stat-icon.paid {
      background: var(--accent-orange);
    }

    .stat-icon.downloaded {
      background: var(--accent-purple);
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: var(--gray-900);
      margin-bottom: var(--spacing-xs);
    }

    .stat-label {
      font-size: 0.875rem;
      color: var(--gray-600);
    }

    .empty-state {
      text-align: center;
      padding: var(--spacing-xl) * 2;
      color: var(--gray-500);
    }

    .empty-icon {
      font-size: 4rem;
      margin-bottom: var(--spacing-lg);
      opacity: 0.5;
    }

    .empty-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: var(--spacing-sm);
    }

    .empty-description {
      margin-bottom: var(--spacing-lg);
    }
  </style>
</head>

<body>
  <div class="main-container">
    <!-- Include Sidebar -->
    <%- include('partials/aside', { path: '/PDFs' }) %>

    <!-- Main Content -->
    <main class="main-content">
      <!-- Page Header -->
      <header class="dashboard-header slide-in-up">
        <div class="welcome-message">المواد التعليمية والمراجع</div>
      </header>

      <!-- Stats Overview -->
      <div class="stats-overview slide-in-up">
        <div class="stat-item">
          <div class="stat-icon total">
            <i class="material-icons-outlined">folder</i>
          </div>
          <div class="stat-value"><%= PDFs.length %></div>
          <div class="stat-label">إجمالي المواد</div>
        </div>

        <div class="stat-item">
          <div class="stat-icon free">
            <i class="material-icons-outlined">folder_open</i>
          </div>
          <div class="stat-value"><%= PDFs.filter(pdf => pdf.pdfStatus === 'Free').length %></div>
          <div class="stat-label">مواد مجانية</div>
        </div>

        <div class="stat-item">
          <div class="stat-icon paid">
            <i class="material-icons-outlined">lock</i>
          </div>
          <div class="stat-value"><%= PDFs.filter(pdf => pdf.pdfStatus !== 'Free').length %></div>
          <div class="stat-label">مواد مدفوعة</div>
        </div>

        <div class="stat-item">
          <div class="stat-icon downloaded">
            <i class="material-icons-outlined">download_done</i>
          </div>
          <div class="stat-value"><%= PDFs.filter(pdf => pdf.isPaid).length %></div>
          <div class="stat-label">تم تحميلها</div>
        </div>

      </div>

      <!-- Filters -->
      <div class="filters-section slide-in-up">
        <div class="search-container">
          <div class="search-input-wrapper">
            <i class="material-icons-outlined search-icon">search</i>
            <input type="text" class="search-input" placeholder="ابحث عن مادة تعليمية..." id="searchInput">
          </div>
          <div class="filter-buttons">
            <button class="filter-btn active" data-filter="all">
              <i class="material-icons-outlined">folder_open</i>
              جميع المواد
            </button>
            <button class="filter-btn" data-filter="free">
              <i class="material-icons-outlined">lock_open</i>
              مجاني
            </button>
            <button class="filter-btn" data-filter="paid">
              <i class="material-icons-outlined">lock</i>
              مدفوع
            </button>
            <button class="filter-btn" data-filter="downloaded">
              <i class="material-icons-outlined">download_done</i>
              محملة
            </button>
          </div>
        </div>
      </div>

      <!-- PDFs Grid -->
      <div class="pdfs-grid slide-in-up" id="pdfsGrid">
        <% if (PDFs && PDFs.length > 0) { %>
        <% PDFs.forEach(pdf => { %>
        <div class="pdf-card" data-filter="<%= pdf.pdfStatus === 'Free' ? 'free' : 'paid' %> <%= pdf.isPaid ? 'downloaded' : '' %>">
          <div class="pdf-image">
            <% if (pdf.pdfPhoto) { %>
            <img src="<%= pdf.pdfPhoto %>" alt="<%= pdf.pdfName %>">
            <% } else { %>
            <i class="material-icons-outlined pdf-icon">description</i>
            <% } %>
            <div class="pdf-type-badge">
              <i class="material-icons-outlined" style="font-size: 0.875rem; margin-left: 4px;">
                <%= pdf.pdfStatus === 'Free' ? 'lock_open' : 'lock' %>
              </i>
              <%= pdf.pdfStatus === 'Free' ? 'مجاني' : 'مدفوع' %>
            </div>

          </div>

          <div class="pdf-content">
            <div class="pdf-header">
              <div class="pdf-title"><%= pdf.pdfName %></div>

            </div>

            <div class="pdf-meta">
              <div class="pdf-meta-item">
                <i class="material-icons-outlined pdf-meta-icon">picture_as_pdf</i>
                <span>PDF</span>
              </div>

              <div class="pdf-meta-item">
                <i class="material-icons-outlined pdf-meta-icon">schedule</i>
                <span>متاح دائماً</span>
              </div>

              <% if (pdf.pdfStatus !== 'Free') { %>
              <div class="pdf-meta-item">
                <i class="material-icons-outlined pdf-meta-icon">monetization_on</i>
                <span class="pdf-price"><%= pdf.pdfPrice %> جنيه</span>
              </div>
              <% } else { %>
              <div class="pdf-status free">مجاني</div>
              <% } %>
            </div>

            <div class="pdf-actions">
              <% if (pdf.pdfStatus === 'Free' || pdf.isPaid) { %>
              <a href="/student/getPDF/<%= pdf._id %>" class="pdf-download-btn" style="text-decoration: none; width: 100%;">
                <i class="material-icons-outlined">visibility</i>
                عرض الملف
              </a>
              <% } else { %>
              <button class="pdf-download-btn" onclick="toggleCodeInput('<%= pdf._id %>')" style="width: 100%;">
                <i class="material-icons-outlined">vpn_key</i>
                أدخل كود الوصول
              </button>
              <% } %>
            </div>

            <!-- Code Input Section -->
            <% if (pdf.pdfStatus !== 'Free' && !pdf.isPaid) { %>
            <div class="code-input-section" id="codeInput_<%= pdf._id %>">
              <form action="/student/buyPDF/<%= pdf._id %>" method="POST" onsubmit="submitCode(event, '<%= pdf._id %>')">
                <input type="text" name="code" class="code-input" placeholder="أدخل كود الوصول للـ PDF" required>
                <button type="submit" class="code-submit-btn">
                  <i class="material-icons-outlined" style="margin-left: 8px;">check</i>
                  تفعيل الـ PDF
                </button>
              </form>
            </div>
            <% } %>
          </div>
        </div>
        <% }); %>
        <% } else { %>
        <div class="empty-state" style="grid-column: 1 / -1;">
          <div class="empty-icon">
            <i class="material-icons-outlined">folder_open</i>
          </div>
          <div class="empty-title">لا توجد مواد تعليمية متاحة</div>
          <div class="empty-description">
            سيتم إضافة المواد التعليمية والمراجع قريباً. تابع معنا للحصول على أحدث المواد.
          </div>
          <a href="/student/chapters" class="btn btn-primary">
            تصفح الأبواب التعليمية
          </a>
        </div>
        <% } %>
      </div>
    </main>
  </div>

  <!-- Mobile Menu Toggle -->
  <button class="mobile-menu-toggle" onclick="toggleSidebar()" style="display: none; position: fixed; top: 20px; right: 20px; z-index: 1001; background: var(--primary-color); color: white; border: none; padding: 12px; border-radius: var(--radius); box-shadow: var(--shadow-lg);">
    <i class="fas fa-bars"></i>
  </button>

  <script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const pdfs = document.querySelectorAll('.pdf-card');

      pdfs.forEach(pdf => {
        const title = pdf.querySelector('.pdf-title').textContent.toLowerCase();

        if (title.includes(searchTerm)) {
          pdf.style.display = 'block';
        } else {
          pdf.style.display = 'none';
        }
      });
    });

    // Filter functionality
    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        // Update active filter button
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');

        const filter = this.getAttribute('data-filter');
        const pdfs = document.querySelectorAll('.pdf-card');

        pdfs.forEach(pdf => {
          const pdfFilters = pdf.getAttribute('data-filter').split(' ');

          if (filter === 'all' || pdfFilters.includes(filter)) {
            pdf.style.display = 'block';
          } else {
            pdf.style.display = 'none';
          }
        });
      });
    });

    // Toggle code input
    function toggleCodeInput(pdfId) {
      const container = document.getElementById('codeInput_' + pdfId);
      if (container) {
        container.style.display = container.style.display === 'block' ? 'none' : 'block';
      }
    }

    // Mobile sidebar toggle
    function toggleSidebar() {
      document.querySelector('.sidebar').classList.toggle('open');
    }

    // Mobile responsive handling
    function handleResize() {
      if (window.innerWidth <= 1024) {
        document.querySelector('.mobile-menu-toggle').style.display = 'block';
      } else {
        document.querySelector('.mobile-menu-toggle').style.display = 'none';
        document.querySelector('.sidebar').classList.remove('open');
      }
    }

    window.addEventListener('resize', handleResize);
    handleResize();

    // Close sidebar on mobile when clicking outside
    document.addEventListener('click', function(event) {
      const sidebar = document.querySelector('.sidebar');
      const toggleBtn = document.querySelector('.mobile-menu-toggle');

      if (window.innerWidth <= 1024 &&
        !sidebar.contains(event.target) &&
        !toggleBtn.contains(event.target) &&
        sidebar.classList.contains('open')) {
        sidebar.classList.remove('open');
      }
    });

    // Add loading animation
    document.addEventListener('DOMContentLoaded', function() {
      const elements = document.querySelectorAll('.slide-in-up');
      elements.forEach((el, index) => {
        setTimeout(() => {
          el.style.opacity = '1';
        }, index * 100);
      });
    });

    // Submit code function
    function submitCode(event, pdfId) {
      event.preventDefault();

      const form = event.target;
      const codeInput = form.querySelector('input[name="code"]');
      const submitBtn = form.querySelector('button[type="submit"]');
      const code = codeInput.value.trim().toUpperCase();

      if (!code) {
        showNotification('يرجى إدخال كود الوصول', 'error');
        return;
      }

      // Show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<i class="material-icons-outlined" style="margin-left: 8px;">hourglass_empty</i>جاري التحقق...';

      // Submit form
      fetch(form.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: `code=${encodeURIComponent(code)}`
        })
        .then(response => {
          if (response.redirected) {
            // Check if redirect contains success or error
            const redirectUrl = response.url;
            if (redirectUrl.includes('success=')) {
              showNotification('تم تفعيل الـ PDF بنجاح!', 'success');
              setTimeout(() => {
                window.location.href = redirectUrl;
              }, 1500);
            } else if (redirectUrl.includes('error=')) {
              const urlParams = new URLSearchParams(redirectUrl.split('?')[1]);
              const error = urlParams.get('error');
              let errorMessage = 'كود الوصول غير صحيح';

              switch (error) {
                case 'invalid_code':
                  errorMessage = 'كود الوصول غير صحيح أو مستخدم من قبل';
                  break;
                case 'grade_mismatch':
                  errorMessage = 'هذا الكود غير مخصص لصفك الدراسي';
                  break;
                case 'code_pdf_mismatch':
                  errorMessage = 'هذا الكود غير مخصص لهذا الملف';
                  break;
                case 'pdf_not_found':
                  errorMessage = 'الملف غير موجود';
                  break;
                case 'already_purchased':
                  errorMessage = 'لديك بالفعل صلاحية الوصول لهذا الملف';
                  break;
                default:
                  errorMessage = 'حدث خطأ أثناء تفعيل الـ PDF';
              }

              showNotification(errorMessage, 'error');
            }
          } else {
            return response.text();
          }
        })
        .then(data => {
          if (data) {
            showNotification('حدث خطأ غير متوقع', 'error');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          showNotification('حدث خطأ في الاتصال', 'error');
        })
        .finally(() => {
          // Reset button state
          submitBtn.disabled = false;
          submitBtn.innerHTML = '<i class="material-icons-outlined" style="margin-left: 8px;">check</i>تفعيل المادة';
        });
    }

    // Show notification function
    function showNotification(message, type = 'info') {
      const notification = document.createElement('div');
      const bgColor = type === 'success' ? 'var(--success)' :
        type === 'error' ? 'var(--error)' :
        type === 'warning' ? 'var(--warning)' : 'var(--primary-color)';

      notification.innerHTML = `
        <div style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); background: ${bgColor}; color: white; padding: var(--spacing-lg); border-radius: var(--radius); box-shadow: var(--shadow-lg); z-index: 1000; max-width: 90%; text-align: center;">
          <i class="material-icons-outlined" style="vertical-align: middle; margin-left: 8px;">
            ${type === 'success' ? 'check_circle' : 
              type === 'error' ? 'error' : 
              type === 'warning' ? 'warning' : 'info'}
          </i>
          ${message}
        </div>
      `;
      document.body.appendChild(notification);

      setTimeout(() => {
        notification.remove();
      }, 5000);
    }

    // Handle error message from URL
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('error')) {
      const error = urlParams.get('error');
      let errorMessage = 'كود الوصول غير صحيح';

      switch (error) {
        case 'invalid_code':
          errorMessage = 'كود الوصول غير صحيح أو مستخدم من قبل';
          break;
        case 'grade_mismatch':
          errorMessage = 'هذا الكود غير مخصص لصفك الدراسي';
          break;
        case 'code_pdf_mismatch':
          errorMessage = 'هذا الكود غير مخصص لهذا الملف';
          break;
        case 'pdf_not_found':
          errorMessage = 'الملف غير موجود';
          break;
        case 'access_denied':
          errorMessage = 'ليس لديك صلاحية للوصول لهذا الملف';
          break;
        case 'already_purchased':
          errorMessage = 'لديك بالفعل صلاحية الوصول لهذا الملف';
          break;
        default:
          errorMessage = 'حدث خطأ أثناء الوصول للملف';
      }

      showNotification(errorMessage, 'error');
    }

    if (urlParams.get('success')) {
      const success = urlParams.get('success');
      let successMessage = 'تم بنجاح';

      switch (success) {
        case 'purchase_completed':
          successMessage = 'تم تفعيل الـ PDF بنجاح!';
          break;
        case 'already_purchased':
