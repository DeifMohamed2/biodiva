                                    <% } else if (!isUserCanEnter) { %>
                                        <div class="btn btn-warning btn-lg" style="cursor: not-allowed; text-align: center; font-size: 0.8rem; padding: 0.5rem;">
                                            <i class="fas fa-lock ms-2"></i>
