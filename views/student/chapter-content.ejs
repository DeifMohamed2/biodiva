        let redirectUrl = '';

        // Function to clean code input
        function cleanCodeInput(code) {
            if (!code || typeof code !== 'string') {
                return '';
            }
            let cleaned = code.trim();
            cleaned = cleaned.replace(/^["']+|["']+$/g, '');
            cleaned = cleaned.replace(/\./g, '');
            cleaned = cleaned.replace(/\s/g, '');
            cleaned = cleaned.toUpperCase();
            return cleaned;
        }

        // Get error type from server response
        function getErrorType(response, message) {
            const lowerMessage = (message || '').toLowerCase();
            
            if (lowerMessage.includes('invalid') || lowerMessage.includes('not found') || lowerMessage.includes('not in system')) {
                return 'invalid_code';
            }
            if (lowerMessage.includes('used') || lowerMessage.includes('مستخدم')) {
                return 'code_used';
            }
            if (lowerMessage.includes('not for this video') || lowerMessage.includes('mismatch') || lowerMessage.includes('video_mismatch')) {
                return 'code_video_mismatch';
            }
            if (lowerMessage.includes('specific code') || lowerMessage.includes('specific_code_required')) {
                return 'specific_code_required';
            }
            if (lowerMessage.includes('grade')) {
                return 'grade_mismatch';
            }
            if (lowerMessage.includes('prerequisite') || lowerMessage.includes('متطلب') || lowerMessage.includes('اختبار') || lowerMessage.includes('واجب')) {
                return 'prerequisites_not_met';
            }
            if (lowerMessage.includes('already') || lowerMessage.includes('access')) {
                return 'already_owned';
            }
            if (lowerMessage.includes('expired') || lowerMessage.includes('انتهت')) {
                return 'code_expired';
            }
            if (lowerMessage.includes('inactive') || lowerMessage.includes('غير نشط')) {
                return 'code_inactive';
            }
            
            return 'default';
        }

        // Show code modal
        function showCodeModal(type, id, title, chapterId = null) {
            document.getElementById('purchaseType').value = type;
            document.getElementById('itemId').value = id;
            if (chapterId) document.getElementById('chapterId').value = chapterId;
            document.getElementById('modalTitle').textContent = `شراء: ${title}`;
            document.getElementById('codeModal').style.display = 'flex';
            const codeInput = document.getElementById('codeInput');
            codeInput.value = '';
            setTimeout(() => codeInput.focus(), 300);
        }

        // Hide code modal
        function hideCodeModal() {
            document.getElementById('codeModal').style.display = 'none';
            document.getElementById('codeInput').value = '';
        }

        // Show expired video message
        function showExpiredMessage() {
            showAlertModal('expired_video');
        }

        // Show alert modal
        function showAlertModal(type, customMessage = null) {
            const errorInfo = errorMessages[type] || errorMessages['default'];
            
            const iconWrapper = document.getElementById('alertIconWrapper');
            const alertIcon = document.getElementById('alertIcon');
            const alertTitle = document.getElementById('alertTitle');
            const alertMessage = document.getElementById('alertMessage');
            const alertDetails = document.getElementById('alertDetails');
            
            // Set icon and styling based on type
            iconWrapper.className = 'alert-icon-wrapper error';
            alertIcon.className = 'fas fa-exclamation-circle';
            
            if (type === 'already_owned') {
                iconWrapper.className = 'alert-icon-wrapper info';
                alertIcon.className = 'fas fa-info-circle';
            } else if (type === 'expired_video') {
                iconWrapper.className = 'alert-icon-wrapper info';
                alertIcon.className = 'fas fa-clock';
            } else if (type === 'prerequisites_not_met' || type === 'prerequisites_not_found') {
                iconWrapper.className = 'alert-icon-wrapper warning';
                alertIcon.className = 'fas fa-exclamation-triangle';
            }
            
            alertTitle.textContent = errorInfo.title;
            alertMessage.textContent = customMessage || errorInfo.message;
            alertDetails.textContent = errorInfo.details;
            
            document.getElementById('alertModal').style.display = 'flex';
        }

        // Hide alert modal
        function hideAlertModal() {
            document.getElementById('alertModal').style.display = 'none';
        }

        // Show success modal
        function showSuccessModal(url, message = 'تم الشراء بنجاح') {
            redirectUrl = url;
            document.getElementById('successMessage').textContent = message;
            document.getElementById('successModal').style.display = 'flex';
        }

        // Hide success modal
        function hideSuccessModal() {
            document.getElementById('successModal').style.display = 'none';
            if (redirectUrl) {
                window.location.href = redirectUrl;
            }
        }

        // Handle purchase
        document.getElementById('confirmPurchaseBtn').addEventListener('click', async function() {
            const type = document.getElementById('purchaseType').value;
            const itemId = document.getElementById('itemId').value;
            const chapterId = document.getElementById('chapterId').value;
            const rawCode = document.getElementById('codeInput').value;
            const code = cleanCodeInput(rawCode);
            
            if (!code || code.length === 0) {
                hideCodeModal();
                showAlertModal('empty_code');
                return;
            }
            
            // Show loading state
            const btn = this;
            const btnIcon = document.getElementById('purchaseBtnIcon');
            const btnText = document.getElementById('purchaseBtnText');
            const btnSpinner = document.getElementById('purchaseSpinner');
            
            btn.disabled = true;
            btnIcon.classList.add('d-none');
            btnText.textContent = 'جاري الشراء...';
            btnSpinner.classList.remove('d-none');
            
            try {
                let url;
                if (type === 'chapter') {
                    url = `/student/chapters/${chapterId}/buy`;
                } else if (type === 'video') {
                    url = `/student/chapter/${chapterId}/video/${itemId}/buy`;
                }
                
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ code: code })
                });
                
                const result = await response.json();
                
                // Hide code modal
                hideCodeModal();
                
                if (result.success) {
                    // Show success modal
                    const successMsg = type === 'chapter' ? 'تم شراء الباب بنجاح! 🎊' : 'تم شراء الفيديو بنجاح! 🎬';
                    showSuccessModal(result.redirect || window.location.href, successMsg);
                } else {
                    // Determine error type and show appropriate message
                    const errorType = getErrorType(response, result.message);
                    let customMessage = null;
                    
                    // Use server message for prerequisites
                    if (errorType === 'prerequisites_not_met' && result.message) {
                        customMessage = result.message;
                    }
                    
                    showAlertModal(errorType, customMessage);
                }
            } catch (error) {
                console.error('Purchase error:', error);
                hideCodeModal();
                showAlertModal('purchase_failed');
            } finally {
                // Reset button state
                btn.disabled = false;
                btnIcon.classList.remove('d-none');
                btnText.textContent = 'تأكيد الشراء';
                btnSpinner.classList.add('d-none');
            }
        });

