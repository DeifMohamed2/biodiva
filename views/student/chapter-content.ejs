        // Live Countdown Timer for videos with less than 24 hours remaining
        function updateCountdowns() {
            const countdownElements = document.querySelectorAll('.time-remaining[data-expiry]');
            
            countdownElements.forEach(el => {
                const expiryStr = el.dataset.expiry;
                if (!expiryStr) return;
                
                const expiry = new Date(expiryStr);
                const now = new Date();
                const diffMs = expiry - now;
                
                if (diffMs <= 0) {
                    // Expired
                    el.querySelector('.countdown-text').textContent = 'انتهت المدة';
                    el.classList.remove('warning', 'danger');
                    el.classList.add('expired');
                    el.querySelector('i').className = 'fas fa-times-circle';
                    return;
                }
                
                const diffHours = Math.floor(diffMs / (1000 * 60 * 60));
                const diffMinutes = Math.floor((diffMs % (1000 * 60 * 60)) / (1000 * 60));
                const diffSeconds = Math.floor((diffMs % (1000 * 60)) / 1000);
                const diffDays = Math.floor(diffHours / 24);
                const remainingHours = diffHours % 24;
                
                let text = '';
                
                if (diffHours < 24) {
                    // Show countdown with hours:minutes:seconds when less than 24 hours
                    if (diffHours > 0) {
                        text = `${diffHours}:${diffMinutes.toString().padStart(2, '0')}:${diffSeconds.toString().padStart(2, '0')}`;
                    } else {
                        text = `${diffMinutes}:${diffSeconds.toString().padStart(2, '0')} دقيقة`;
                    }
                    
                    // Update class based on remaining time
                    el.classList.remove('warning', 'expired');
                    el.classList.add(diffHours <= 6 ? 'danger' : 'warning');
                    el.querySelector('i').className = 'fas fa-hourglass-half';
                } else if (diffDays >= 1) {
                    text = diffDays === 1 ? 'باقي يوم واحد' : `باقي ${diffDays} يوم`;
                    if (remainingHours > 0 && diffDays < 3) {
                        text += ` و ${remainingHours} ساعة`;
                    }
                    el.classList.remove('danger', 'expired', 'warning');
                    if (diffDays <= 1) {
                        el.classList.add('warning');
                    }
                }
                
                el.querySelector('.countdown-text').textContent = text;
            });
        }
        
        // Update countdown every second
        updateCountdowns();
        setInterval(updateCountdowns, 1000);

        // Set up real-time code cleaning on input field
        const codeInput = document.getElementById('codeInput');
        if (codeInput) {
            codeInput.addEventListener('input', function(e) {
                const cleaned = cleanCodeInput(e.target.value);
                if (cleaned !== e.target.value) {
                    const cursorPos = e.target.selectionStart;
                    e.target.value = cleaned;
                    const newPos = Math.min(cursorPos, cleaned.length);
                    e.target.setSelectionRange(newPos, newPos);
                }
            });
        }
