<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

  <!-- Custom Security CSS -->
  <style>
    body {
      background-color: #000;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      user-select: none;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
    }

    .pdf-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: white;
      overflow: hidden;
    }

    .pdf-viewer {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
      background: #fff;
    }

    .security-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: transparent;
      z-index: 10;
      pointer-events: none;
    }

    .loading-spinner {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 20;
    }

    .spinner-border {
      width: 3rem;
      height: 3rem;
      border-width: 0.3em;
    }

    /* Disable text selection and right-click */
    .pdf-viewer,
    .pdf-container {
      -webkit-touch-callout: none;
      -webkit-user-select: none;
      -khtml-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    /* Overlay to block Google Drive toolbar buttons - invisible click blockers */
    .toolbar-blocker {
      position: absolute;
      top: 0;
      right: 0;
      width: 60px;
      height: 60px;
      background: transparent;
      z-index: 9999;
      pointer-events: all;
      cursor: not-allowed;
    }

    .toolbar-blocker-left {
      position: absolute;
      top: 0;
      left: 0;
      width: 60px;
      height: 60px;
      background: transparent;
      z-index: 9999;
      pointer-events: all;
      cursor: not-allowed;
    }

    .toolbar-blocker-center {
      position: absolute;
      top: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 150px;
      height: 50px;
      background: transparent;
      z-index: 9999;
      pointer-events: all;
      cursor: not-allowed;
    }

    /* Mobile specific adjustments */
    @media (max-width: 768px) {

      .toolbar-blocker,
      .toolbar-blocker-left {
        width: 50px;
        height: 50px;
      }

      .toolbar-blocker-center {
        width: 120px;
        height: 45px;
      }
    }

    /* Additional security to block iframe toolbar */
    iframe {
      pointer-events: auto;
    }

    .pdf-viewer-container {
      position: relative;
      width: 100%;
      height: 100%;
    }

    /* Hide scrollbars for cleaner look */
    .pdf-viewer::-webkit-scrollbar {
      display: none;
    }

    .pdf-viewer {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    /* Print protection */
    @media print {
      body * {
        visibility: hidden;
      }

      .pdf-container,
      .pdf-container * {
        visibility: visible;
      }

      .pdf-container {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <!-- PDF Container -->
  <div class="pdf-container">
    <div class="pdf-viewer-container" style="position: relative;">
      <div class="loading-spinner" id="loadingSpinner">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">جاري التحميل...</span>
        </div>
      </div>

      <% if (isGoogleDrive) { %>
      <!-- Google Drive PDF Viewer -->
      <iframe src="<%= secureViewUrl %>" class="pdf-viewer" id="pdfViewer" frameborder="0" allowfullscreen allow="autoplay; encrypted-media; fullscreen" loading="eager">
      </iframe>
      <% } else { %>
      <!-- Legacy PDF Viewer -->
      <iframe src="<%= secureViewUrl %>" class="pdf-viewer" id="pdfViewer" frameborder="0" allowfullscreen loading="eager">
      </iframe>
      <% } %>

      <!-- Overlay blockers to hide Google Drive toolbar buttons -->
      <div class="toolbar-blocker"></div>
      <div class="toolbar-blocker-left"></div>
      <div class="toolbar-blocker-center"></div>

      <!-- Security Overlay -->
      <div class="security-overlay" id="securityOverlay"></div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Security and Anti-Download Scripts -->
  <script>
    // Security Configuration
    const securitySettings = <%- JSON.stringify(securitySettings) %>;
    const viewStartTime = new Date('<%= viewStartTime %>');
    const viewTimeLimit = <%= securitySettings.viewTimeLimit %>;

    // Disable right-click context menu
    document.addEventListener('contextmenu', function(e) {
      e.preventDefault();
      return false;
    });

    // Disable F12, Ctrl+Shift+I, Ctrl+U, Ctrl+S
    document.addEventListener('keydown', function(e) {
      // Disable F12
      if (e.keyCode === 123) {
        e.preventDefault();
        return false;
      }

      // Disable Ctrl+Shift+I (Developer Tools)
      if (e.ctrlKey && e.shiftKey && e.keyCode === 73) {
        e.preventDefault();
        return false;
      }

      // Disable Ctrl+U (View Source)
      if (e.ctrlKey && e.keyCode === 85) {
        e.preventDefault();
        return false;
      }

      // Disable Ctrl+S (Save)
      if (e.ctrlKey && e.keyCode === 83) {
        e.preventDefault();
        return false;
      }

      // Disable Ctrl+A (Select All)
      if (e.ctrlKey && e.keyCode === 65) {
        e.preventDefault();
        return false;
      }

      // Disable Ctrl+C (Copy)
      if (e.ctrlKey && e.keyCode === 67) {
        e.preventDefault();
        return false;
      }

      // Disable Ctrl+P (Print) if not allowed
      if (e.ctrlKey && e.keyCode === 80 && !securitySettings.allowPrint) {
        e.preventDefault();
        return false;
      }
    });

    // Disable text selection
    document.addEventListener('selectstart', function(e) {
      e.preventDefault();
      return false;
    });

    // Disable drag and drop
    document.addEventListener('dragover', function(e) {
      e.preventDefault();
      return false;
    });

    document.addEventListener('drop', function(e) {
      e.preventDefault();
      return false;
    });

    // Hide loading spinner when PDF loads
    const pdfViewer = document.getElementById('pdfViewer');
    const loadingSpinner = document.getElementById('loadingSpinner');

    pdfViewer.addEventListener('load', function() {
      console.log('PDF iframe loaded successfully');
      loadingSpinner.style.display = 'none';
    });

    pdfViewer.addEventListener('error', function(e) {
      console.error('PDF iframe failed to load:', e);
      loadingSpinner.innerHTML = '<p style="color: red;">فشل تحميل الملف. يرجى المحاولة مرة أخرى.</p>';
    });

    // Set a timeout to hide spinner if iframe doesn't trigger load event
    setTimeout(function() {
      if (loadingSpinner.style.display !== 'none') {
        console.log('Hiding spinner after timeout');
        loadingSpinner.style.display = 'none';
      }
    }, 5000);

    // Time limit countdown
    <% if (securitySettings.viewTimeLimit > 0) { %>

    function updateCountdown() {
      const now = new Date();
      const elapsedMinutes = Math.floor((now - viewStartTime) / (1000 * 60));
      const remainingMinutes = Math.max(0, viewTimeLimit - elapsedMinutes);

      const countdownElement = document.getElementById('countdownTimer');
      if (countdownElement) {
        countdownElement.textContent = remainingMinutes;
      }

      if (remainingMinutes <= 0) {
        // Time expired - redirect or show message
        alert('انتهت مدة العرض المسموحة لهذا الملف.');
        window.location.href = '/student/PDFs';
        return;
      }

      // Show warning when 5 minutes remaining
      if (remainingMinutes <= 5) {
        document.getElementById('timeLimitWarning').classList.add('show');
      }
    }

    // Update countdown every minute
    setInterval(updateCountdown, 60000);
    updateCountdown(); // Initial call
    <% } %>

    // Prevent iframe from being embedded elsewhere
    if (window.top !== window.self) {
      window.top.location = window.self.location;
    }

    // Additional security: Clear clipboard on page load
    if (navigator.clipboard) {
      navigator.clipboard.writeText('').catch(function(err) {
        console.log('Clipboard access denied');
      });
    }

    // Log security events
    function logSecurityEvent(event, details) {
      console.log('Security Event:', event, details);
      // You can send this to your server for monitoring
    }

    // Monitor for suspicious activities
    let suspiciousActivityCount = 0;

    document.addEventListener('keydown', function(e) {
      // Count rapid key presses (potential automation)
      suspiciousActivityCount++;
      if (suspiciousActivityCount > 10) {
        logSecurityEvent('rapid_keypress', {
          count: suspiciousActivityCount
        });
      }
    });

    // Reset counter every 5 seconds
    setInterval(function() {
      suspiciousActivityCount = 0;
    }, 5000);

    // Prevent zoom manipulation
    document.addEventListener('wheel', function(e) {
      if (e.ctrlKey) {
        e.preventDefault();
        return false;
      }
    });
  </script>
</body>

</html>