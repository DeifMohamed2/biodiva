        // Try alternative CDN
        const altScript = document.createElement('script');
        altScript.src = 'https://assets.mediadelivery.net/playerjs/playerjs-latest.min.js';
        altScript.onload = function() {
          console.log('PlayerJS loaded from alternative CDN');
          // Wait a bit for PlayerJS to be fully available
          setTimeout(function() {
            console.log('Checking PlayerJS availability (alt):', typeof Playerjs);
            if (typeof initializePlayerJS === 'function') {
              initializePlayerJS();
            }
          }, 200);
        };
        altScript.onerror = function() {
          console.error('Failed to load PlayerJS from all sources');
          // Show fallback message
          const container = document.getElementById('playerjs-container');
          if (container) {
            container.innerHTML = '<div style="position:relative;padding-top:56.25%;background:#f0f0f0;display:flex;align-items:center;justify-content:center;"><p style="position:absolute;color:#666;">خطأ في تحميل مشغل الفيديو</p></div>';
          }
        };
        document.head.appendChild(altScript);
      };
      document.head.appendChild(script);
    }
    
    // Load PlayerJS when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadPlayerJS);
    } else {
      loadPlayerJS();
    }
  </script>
  
  <script>
