    // Handle unhandled promise rejections from external scripts
    window.addEventListener('unhandledrejection', function(e) {
      if (e.reason && e.reason.message && e.reason.message.includes('fetch')) {
        console.warn('External script fetch error (ignored):', e.reason.message);
        e.preventDefault();
        return true;
