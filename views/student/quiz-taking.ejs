    }

    .quiz-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: #1a202c;
      margin: 0;
    }

    .timer-display {
      background: #f7fafc;
      border: 2px solid #e2e8f0;
      color: #2d3748;
      padding: 12px 20px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1.1rem;
      display: flex;
      align-items: center;
      gap: 8px;
      min-width: 120px;
      justify-content: center;
    }

