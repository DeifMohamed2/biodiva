      background: #ffffff;
      padding: 24px 32px;
      border-top: 1px solid #e2e8f0;
    }

    .nav-buttons {
      display: flex;
      gap: 12px;
      justify-content: center;
    }

    .nav-btn {
      padding: 12px 24px;
      border: 2px solid transparent;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
