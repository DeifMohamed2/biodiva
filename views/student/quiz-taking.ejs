      justify-content: center;
      font-weight: 600;
      font-size: 1rem;
      flex-shrink: 0;
      transition: all 0.2s ease;
    }

    .answer-option.selected .answer-marker {
      background: #4299e1;
      border-color: #4299e1;
      color: white;
    }

    .answer-text {
      flex: 1;
      font-size: 1.1rem;
      line-height: 1.6;
      color: #2d3748;
      font-weight: 400;
    }

    .answer-check {
      width: 24px;
      height: 24px;
      border: 2px solid #e2e8f0;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: transparent;
      transition: all 0.2s ease;
    }

    .answer-option.selected .answer-check {
      background: #4299e1;
      border-color: #4299e1;
      color: white;
    }

    /* Navigation */
