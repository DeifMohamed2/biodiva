    // Handle purchase confirmation
    document.getElementById('confirmPurchase').addEventListener('click', async function() {
        const code = document.getElementById('purchaseCode').value.trim();
        
        if (!code) {
            showAlertModal('empty_code');
            return;
        }
        
        if (!selectedVideoId) {
            showAlertModal('default');
            return;
        }
        
        // Show loading state
        const btn = this;
        const btnText = btn.querySelector('i.fa-check');
        const btnSpinner = btn.querySelector('.btn-loading-spinner');
        
        btn.disabled = true;
        if (btnText) btnText.classList.add('d-none');
        if (btnSpinner) btnSpinner.classList.remove('d-none');
        
        try {
            const response = await fetch(`/student/chapter/<%= chapterId %>/video/${selectedVideoId}/buy`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ code: code })
            });
            
            const data = await response.json();
            
            // Close purchase modal
            if (purchaseModal) {
                purchaseModal.hide();
            }
            
            if (data.success) {
                // Show success modal
                showSuccessModal(data.redirect || `/student/chapter/<%= chapterId %>/video/${selectedVideoId}`);
            } else {
                // Determine error type and show appropriate message
                const errorType = getErrorType(response, data.message);
                let customMessage = null;
                
                // Use server message for prerequisites
                if (errorType === 'prerequisites_not_met' && data.message) {
                    customMessage = data.message;
                }
                
                showAlertModal(errorType, customMessage);
            }
        } catch (error) {
            console.error('Purchase error:', error);
            if (purchaseModal) {
                purchaseModal.hide();
            }
            showAlertModal('purchase_failed');
        } finally {
            // Reset button state
            btn.disabled = false;
            if (btnText) btnText.classList.remove('d-none');
            if (btnSpinner) btnSpinner.classList.add('d-none');
        }
