    function showAlertModal(type, customMessage = null) {
        const errorInfo = errorMessages[type] || errorMessages['default'];
        
        const iconWrapper = document.getElementById('alertIconWrapper');
        const alertIcon = document.getElementById('alertIcon');
        const alertTitle = document.getElementById('alertTitle');
        const alertMessage = document.getElementById('alertMessage');
        const alertDetails = document.getElementById('alertDetails');
        
        // Set icon and styling based on type
        iconWrapper.className = 'alert-icon-wrapper error';
        alertIcon.className = 'fas fa-exclamation-circle';
        
        if (type === 'already_owned') {
            iconWrapper.className = 'alert-icon-wrapper info';
